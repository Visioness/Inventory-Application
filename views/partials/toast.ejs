<div id="toast-container" class="fixed top-5 left-1/2 transform -translate-x-1/2 z-50 flex flex-col gap-2 min-w-[300px] pointer-events-none"></div>

<% if (locals.toast) { %>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      if (typeof showToast === 'function') {
        showToast("<%= toast.message %>", "<%= toast.type %>");
      } else {
        // Retry if script loaded async
        setTimeout(() => {
             if (typeof showToast === 'function') {
                showToast("<%= toast.message %>", "<%= toast.type %>");
             }
        }, 100);
      }
    });
  </script>
<% } %>

